# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=root
DB_PASSWORD=your_password_here
DB_NAME=user_management

# Application Configuration
PORT=3000
NODE_ENV=development

# Database Synchronization Mode
# Options:
# - 'safe': Only create tables if they don't exist (RECOMMENDED)
# - 'alter': Modify existing tables to match models (DEVELOPMENT)
# - 'force': Drop and recreate all tables (DANGEROUS - DATA LOSS!)
# - 'none': Skip synchronization
DB_SYNC_MODE=safe
